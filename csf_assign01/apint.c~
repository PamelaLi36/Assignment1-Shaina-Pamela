uint64_t apint_get_bits(const ApInt *ap, unsigned n) {
  return ap->data[n];
	//assert(0);
	//return 0UL;
}

int apint_highest_bit_set(const ApInt *ap) {
  uint64_t temp = ap->data[0];
  int hb = 0;

  if(temp == 0) {
    return -1;
  }

  for(int i = 0; i < 64; i++) {
    if(temp & 1 == 1) {
      hb = i;
    }
    temp >>=1;
  }

  return hb;
  //assert(0);
  //return -1;
}

