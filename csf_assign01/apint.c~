ApInt *apint_create_from_u64(uint64_t val) {
  ApInt * new_apint = (ApInt*)malloc(sizeof(ApInt));
  new_apint->len = 1;
  new_apint->data = (uint64_t*)malloc(new_apint->len*sizeof(uint64_t));
  new_apint->data[0] = val;
  new_apint->isNegative = false;

  // assert(0);
  // return NULL;
  return new_apint;
}

